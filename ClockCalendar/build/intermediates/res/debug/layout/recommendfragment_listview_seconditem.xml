<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/meibao_color_15"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/meibao_color_15" >

        <ImageView
            android:id="@+id/recommendfragment_listview_seconditem_topLayoutImage"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/guangchang_gc_jingpin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/recommendfragment_listview_seconditem_topLayoutImage"
            android:text="一直被追赶从未被超越"
            android:textColor="@color/meibao_color_14"
            android:textSize="@dimen/font5" />
    </RelativeLayout>

    <com.yktx.check.listview.TwoWayView
        android:id="@+id/recommendfragment_listview_seconditem_HorizontalListView"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/meibao_color_15" >

        <ImageView
            android:id="@+id/recommendfragment_listview_seconditem_bottomLayoutImage"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/guangchang_gc_chuangjian" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/recommendfragment_listview_seconditem_bottomLayoutImage"
            android:text="刚刚诞生"
            android:textColor="@color/meibao_color_14"
            android:textSize="@dimen/font5" />
    </RelativeLayout>

