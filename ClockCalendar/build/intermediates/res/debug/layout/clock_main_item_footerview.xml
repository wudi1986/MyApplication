<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="30dp"
    android:paddingRight="30dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <View
            android:id="@+id/centerView"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/createTask"
            android:layout_toLeftOf="@id/centerView"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="64dp"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/home_xinjiandaka" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="新建打卡"
                android:textColor="@color/meibao_color_10"
                android:textSize="@dimen/font3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/homeShare"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/centerView"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/home_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="今日成就"
                android:textColor="@color/meibao_color_10"
                android:textSize="@dimen/font3" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout><!-- From: file:/F:/KT/MyApplication/ClockCalendar/res/layout/clock_main_item_footerview.xml -->