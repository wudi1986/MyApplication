        android:singleLine="true"
        android:textSize="@dimen/font6"
        android:textColor="@color/meibao_color_11"
        android:background="@color/meibao_color_13"
        />
    
    <ImageView
        android:id="@+id/taskLastPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone" />
    
    <ImageView
        android:id="@+id/taskMorePhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/xq_duotu"
        android:visibility="gone" />
    
    <ImageView
        android:id="@+id/taskImageKuang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/xq_rl_youtu"
        android:visibility="gone" />
    

