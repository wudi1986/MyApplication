    <LinearLayout
        android:id="@+id/clock_my_item_TopLayout"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingBottom="8dp" >

        <ImageView
            android:id="@+id/clock_my_item_Image"
            android:layout_width="22dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/clock_my_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12.5dp"
            android:layout_toRightOf="@id/clock_my_item_Image"
            android:text="每天早上喝白开水"
            android:textColor="@color/meibao_color_9"
            android:textSize="@dimen/font4" />

        <TextView
            android:id="@+id/clock_my_item_todayClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clock_my_item_name"
            android:layout_marginTop="4dp"
            android:text="今日已有15人打卡"
            android:textColor="@color/meibao_color_11"
            android:textSize="@dimen/font5"
            android:visibility="gone" />

        <TextView
            android:id="@+id/clock_my_item_playDayNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:text="累计打卡13天"
            android:textColor="@color/meibao_color_11"
            android:textSize="@dimen/font5"
            android:visibility="gone" />

