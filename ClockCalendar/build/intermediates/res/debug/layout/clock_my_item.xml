            <ImageView
                android:id="@+id/clock_my_item_pointImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/geren_task_jc_jifen" />

            <TextView
                android:id="@+id/clock_my_item_pointNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/clock_my_item_pointImage"
                android:layout_marginRight="4dp"
                android:textColor="@color/meibao_color_1"
                android:textSize="@dimen/font5"
                android:visibility="visible" />
<!--         </LinearLayout> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_alignLeft="@id/clock_my_item_name"
            android:layout_below="@id/clock_my_item_name"
            android:layout_marginRight="36dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/clock_my_item_progress1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/meibao_color_1" />

            <View
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/clock_my_item_progress2"
