                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/meibao_color_1_light" />
        </LinearLayout>

        <TextView
            android:id="@+id/clock_my_item_justNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="上次打卡  5小时前"
            android:textColor="@color/meibao_color_11"
            android:textSize="@dimen/font5"
            android:visibility="gone" />

        <TextView
            android:id="@+id/clock_my_item_grade"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/clock_my_item_justNow"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/grade1"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/font4"
            android:visibility="gone" />

