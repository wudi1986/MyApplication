        <TextView
            android:id="@+id/clock_my_item_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="8dp"
            android:text="天"
            android:textColor="@color/meibao_color_1"
            android:textSize="@dimen/font4"
            android:visibility="gone" />

        <TextView
            android:id="@+id/clock_my_item_TotalCheckCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/clock_my_item_day"
            android:layout_centerVertical="true"
            android:layout_marginBottom="-2dp"
            android:layout_toLeftOf="@id/clock_my_item_day"
            android:text="12"
            android:textColor="@color/meibao_color_1"
            android:textSize="@dimen/font2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/clock_my_item_Yinsi"
            android:layout_width="wrap_content"
