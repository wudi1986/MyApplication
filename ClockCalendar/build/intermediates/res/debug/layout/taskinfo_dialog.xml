<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="28dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <RelativeLayout
        android:id="@+id/takephoto_dialog_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/takeclock_dialog_shape"
        android:paddingBottom="30dp"
         >

        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享成就"
                android:textColor="@color/meibao_color_10"
                android:textSize="@dimen/font2" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:background="@color/meibao_color_10"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:text="可拍摄或选择三张照片"
                android:textColor="@color/meibao_color_10"
                android:textSize="@dimen/font5"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/titleLayout"
            android:background="@color/meibao_color_1"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/takephoto_dialog_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleLayout"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/taskinfo_dialog_bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:gravity="center_vertical"
                android:minHeight="84dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/setTask"
                    android:layout_width="60dp"
                    android:layout_height="84dp"
                    android:layout_weight="1"
                    android:src="@drawable/xq_share_setting" />

                <ImageView
                    android:id="@+id/deleteTask"
                    android:layout_width="60dp"
                    android:layout_height="84dp"
                    android:layout_weight="1"
                    android:src="@drawable/xq_share_delete" />

                <ImageView
                    android:id="@+id/inviteTask"
                    android:layout_width="60dp"
                    android:layout_height="84dp"
                    android:layout_weight="1"
                    android:src="@drawable/xq_share_yaoqing"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="84dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/sinaShare"
                    android:layout_width="60dp"
                    android:layout_height="84dp"
                    android:layout_weight="1"
                    android:src="@drawable/xq_share_sina" />

                <ImageView
                    android:id="@+id/friendCircleShare"
                    android:layout_width="60dp"
                    android:layout_height="84dp"
                    android:layout_weight="1"
                    android:src="@drawable/xq_share_circle" />

                <ImageView
                    android:id="@+id/qqZoneShare"
                    android:layout_width="60dp"
                    android:layout_height="84dp"
                    android:layout_weight="1"
                    android:src="@drawable/xq_share_qq" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/takephoto_dialog_outSide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/takephoto_dialog_Layout"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/android%20test/MyApplication/ClockCalendar/res/layout/taskinfo_dialog.xml -->