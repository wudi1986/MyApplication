<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="16dp" >

    <!-- <ImageView -->
    <!-- android:id="@+id/clock_main_today_item_leftFristImage" -->
    <!-- android:layout_width="6dp" -->
    <!-- android:layout_height="match_parent" -->
    <!-- android:background="@drawable/clock_main_today_left" -->
    <!-- android:maxHeight="90dp" /> -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingBottom="8dp" >

        <ImageView
            android:id="@+id/clock_main_today_item_Image"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:src="@drawable/xz0" />

        <ImageView
            android:id="@+id/clock_main_today_checked"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/home_task_yida3" />

        <TextView
            android:id="@+id/clock_main_today_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12.5dp"
            android:layout_toRightOf="@id/clock_main_today_item_Image"
            android:text="每天早上喝白开水"
            android:textColor="@color/meibao_color_9"
            android:textSize="@dimen/font4" />

        <TextView
            android:id="@+id/clock_main_today_item_todayClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clock_main_today_item_name"
            android:layout_marginTop="4dp"
            android:text="今日已有15人打卡"
            android:textColor="@color/meibao_color_11"
            android:textSize="@dimen/font5"
            android:visibility="gone" />

        <TextView
            android:id="@+id/clock_main_today_item_playDayNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:text="累计打卡13天"
            android:textColor="@color/meibao_color_11"
            android:textSize="@dimen/font5"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/clock_main_today_item_RightLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:orientation="vertical"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/clock_main_today_item_pointImage"
                android:layout_width="44dp"
                android:layout_height="64dp"
                android:src="@drawable/home_jiantou_xq" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_alignLeft="@id/clock_main_today_item_name"
            android:layout_below="@id/clock_main_today_item_name"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/clock_main_today_item_RightLayout"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/clock_main_today_item_progress1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/meibao_color_14" />

            <View
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/clock_main_today_item_progress2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/meibao_color_14" />

            <View
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/clock_main_today_item_progress3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/meibao_color_14" />

            <View
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/clock_main_today_item_progress4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/meibao_color_14" />

            <View
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/clock_main_today_item_progress5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/meibao_color_14" />

            <View
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/clock_main_today_item_progress6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/meibao_color_14_light" />

            <View
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/clock_main_today_item_progress7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/meibao_color_14_light" />
        </LinearLayout>

        <ImageView
            android:id="@+id/clock_main_today_item_Yinsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/clock_main_today_item_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/clock_main_today_item_name"
            android:src="@drawable/geren_yinsi2" />

        <TextView
            android:id="@+id/clock_main_today_item_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/clock_main_today_item_name"
            android:layout_toLeftOf="@id/clock_main_today_item_RightLayout"
            android:gravity="center"
            android:text="-1天"
            android:textColor="@color/meibao_color_3"
            android:textSize="@dimen/font5" />
        <!-- <View -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="1dp" -->
        <!-- android:layout_below="@+id/clock_main_today_item_todayClock" -->
        <!-- android:layout_marginTop="12dp" -->
        <!-- android:background="@color/meibao_color_12" /> -->

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line"
        android:visibility="gone" />

