<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClockDynamicActivity" 
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ClockDynamic_sticky_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/ClockDynamic_title_tabs"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/ClockDynamic_title_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/back" />

                <com.yktx.check.widget.OldPagerSlidingTabStrip
                    android:id="@+id/ClockDynamic_tabs"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white" />
                <ImageView
                    android:id="@+id/ClockDynamic_title_point"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/xx_search" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_line" />
            </RelativeLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/ClockDynamic_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ClockDynamic_title_tabs" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/F:/KT/MyApplication/ClockCalendar/res/layout/activity_clock_dynamic.xml -->